<Window x:Class="GitConfigEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GitConfigEditor"
        mc:Ignorable="d"
        Title="MainWindow" Height="237" Width="800">
    <Grid Margin="0,0,0,19">
        <StackPanel Margin="10,38,0,74">

            
            <TextBox x:Name="txtUsername" ToolTip="Enter Global Git Username" Width="540" />
            
            <TextBox x:Name="txtEmail" Margin="10" ToolTip="Enter Global Git Email" Width="540" />
            <Button x:Name="btnSave" Content="Save" Margin="10" Click="btnSave_Click" Width="100"/>
        </StackPanel>
        <Label Content="Email:" HorizontalAlignment="Left" Margin="79,60,0,0" VerticalAlignment="Top" Width="45"/>
        <Label Content="Username:" HorizontalAlignment="Left" Margin="54,34,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
